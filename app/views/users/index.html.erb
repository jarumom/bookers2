<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'books/sidebar', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no-image', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "show",user_path(user),method: :get %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>
