<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'sidebar', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </thead>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(book.user) do %>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no-image', size: "80x80" %>
                <% end %>
              <% end %>
              </td>
              <td><%=link_to book.title, book_path(book), method: :get %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>

